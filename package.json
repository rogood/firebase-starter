{
  "name": "firebase-starter",
  "version": "1.0.2",
  "description": "",
  "scripts": {
    "format": "prettier --write **/*.ts",
    "pretest": "tsc",
    "test": "firebase emulators:exec --only firestore 'mocha --timeout=10000'",
    "deploy": "firebase deploy --token $(grep FIREBASE_TOKEN .env | cut -d '=' -f2) --project $(grep FIREBASE_PROJECT .env | cut -d '=' -f2)",
    "deploy:ci": "firebase deploy --token $FIREBASE_TOKEN --project $FIREBASE_PROJECT"
  },
  "devDependencies": {
    "@firebase/testing": "^0.18.2",
    "@types/mocha": "7.0.2",
    "mocha": "7.1.1",
    "mocha-typescript": "1.1.17",
    "prettier": "1.19.1",
    "source-map-support": "0.5.16",
    "ts-node": "7.0.1",
    "typescript": "3.1.3"
  },
  "mocha": {
    "ui": "mocha-typescript",
    "recursive": "test",
    "require": "source-map-support/register"
  }
}
